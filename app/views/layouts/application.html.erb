<!DOCTYPE html>
<html>
  <head>
    <title>FirstRailsApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if action_name != 'home' %>
      <div class="navbar">
        <%= link_to "home", root_path %>
      </div>
    <% end %>
    <%= yield %>
    <div class="footer"></div>
  </body>
</html>
